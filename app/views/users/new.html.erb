<h1>Sign Up</h1>
<%# <%= render :partial => 'form'   is not good  %>

<% if @user.errors.any?  %>
    <ol>
        <%#  plural or singular  %>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ol>
<% end  %>

<%= form_for @user do |f|%>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign UP!"%>
<% end %>

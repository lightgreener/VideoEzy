<!DOCTYPE html>
<html>
  <head>
    <title>VideoEzy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
        <nav class="first-line">
            <%= link_to 'Home', root_path %>
            <% if @current_user.present? %>

               <% if @current_user.admin? %>
               <%= link_to 'All users', users_path %>
               <% end %>

            <%= link_to " Log out", login_path, :method =>'delete' %>
            <% else %>
            <%= link_to 'Sign up',new_user_path %>
            <%= link_to 'Login', login_path %>
            <% end  %>
        </nav>


      <nav class="navbar navbar-expand-lg navbar-light bg-navbar bg">

    <img class="logoImg" src="assets/video.png" alt="">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Stores
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">NSW</a>
              <a class="dropdown-item" href="#"> QLD</a>
              <a class="dropdown-item" href="#">WA</a>
              <a class="dropdown-item" href="#">VIC</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">more stores</a>
            </div>
          </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Movies
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Actions</a>
            <a class="dropdown-item" href="#">Romance</a>
            <a class="dropdown-item" href="#">Sci-fic</a>
            <a class="dropdown-item" href="#">Animation</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">more movies</a>
          </div>
        </li>

      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>

      <div class="box">
          <nav class="main-nav">
              <% if @current_user.present? %>
              Welcome <%= @current_user.email %>
              <% end  %>
          </nav>
          <%= yield %>
      </div>
  </body>
</html>
